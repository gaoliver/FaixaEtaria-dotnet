@model IEnumerable<FaixaEtaria.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastrados (@Model.Count())</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PessoaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PessoaId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.PessoaId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Component.InvokeAsync("Adolescente")
@await Component.InvokeAsync("Adultos")
@await Component.InvokeAsync("Idosos")